
extends ../layout

block content
  .container
    h1.text-center Lista de Cursos
    hr
    .col-sm-12
      a.btn.btn-secondary.btn-lg.btn-block.active(href='/admin/curso/crear', role='button', aria-pressed='true') Crear Curso
    br
     
    .table-responsive.tamTabla
      table.table.table-striped.table-hover
        thead.bg-primary
          tr
            th(scope='col') #
            th(scope='col') Título del Curso
            th(scope='col') E.A.P
            th(scope='col') Ciclo
            th(scope='col') Imagen
            th(scope='col') Id chatbot
            th(scope='col') 
        tbody
          each curso, index in cursos
            tr
              th(scope='row') #{index + 1}
              td #{curso.title}
              if curso.eap == 1
                td Ingeniería de Sistemas
              else
                td Ingeniería de Software
              td #{curso.cycle}
              td
                img.rounded(src=curso.image, class='profile', width='100', height='100')
              td #{curso.idChatbot}
              td 
                a.btn.btn-primary(href=`/admin/cursos/${curso._id}`, role='button') Ver más