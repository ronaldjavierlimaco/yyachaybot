extends ../layout

block content
  .container
    .page-header
      .text-center
        br
        h3 Informaci√≥n de Perfil
        a.btn.btn-primary(href='/perfil/editar', role='button') Editar Perfil
    br
    .row
      .col-sm-7
        .form-group
          label.col-sm-12.control-label(for='name') Nombres
          .col-sm-12
            input.form-control(type='text', name='names', id='name', value=user.names readonly)
        .form-group
          label.col-sm-12.control-label(for='name') Apellidos
          .col-sm-12
            input.form-control(type='text', name='surnames', id='name', value=user.surnames readonly)    
        .form-group
          label.col-sm-12.control-label(for='email') Email
          .col-sm-12
            input.form-control(type='email', name='email', id='email', value=user.email readonly)
        .form-group
          label.col-sm-12.control-label Genero
          .col-sm-6
            label.radio.col-sm-6
              input(type='radio', checked=user.profile.gender=='M', name='gender', value='M', data-toggle='radio' disabled)
              span Masculino
            label.radio.col-sm-6
              input(type='radio', checked=user.profile.gender=='F', name='gender', value='F', data-toggle='radio' disabled)
              span Femenino
        .form-group
          label.col-sm-12.control-label(for='website') Tipo de usuario
          .col-sm-12
            if user.type == 2
              input.form-control(type='text', name='type', id='', value='Alumno' readonly)
        
      .col-sm-5
        .form-group
          br
          .text-center
            if !user.profile.photo
              img.rounded(src=user.gravatar(), alt='Responsive image', width='350', height='400')
            else  
              img.rounded(src=user.profile.photo, alt='Responsive image', width='350', height='400')
            label.col-sm-12.control-label Imagen de Perfil