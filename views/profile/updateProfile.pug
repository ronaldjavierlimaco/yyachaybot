
extends ../layout

block content
  .container
    .page-header
      h3 Editar Perfil

    form.form-horizontal(action='/perfil/editar', method='POST')
      input(type='hidden', name='_csrf', value=_csrf)
      .form-group
        label.col-sm-3.control-label(for='name') Nombres
        .col-sm-7
          input.form-control(type='text', name='names', id='name', value=user.names)
      .form-group
        label.col-sm-3.control-label(for='name') Apellidos
        .col-sm-7
          input.form-control(type='text', name='surnames', id='name', value=user.surnames)    
      .form-group
        label.col-sm-3.control-label(for='email') Email
        .col-sm-7
          input.form-control(type='email', name='email', id='email', value=user.email)
      .form-group
        label.col-sm-3.control-label GÃ©nero
        .col-sm-6
          label.radio.col-sm-3
            input(type='radio', checked=user.profile.gender=='M', name='gender', value='M', data-toggle='radio')
            span Masculino
          label.radio.col-sm-3
            input(type='radio', checked=user.profile.gender=='F', name='gender', value='F', data-toggle='radio')
            span Femenino

      .form-group
        label.col-sm-3.control-label(for='') Perfiles de Aprendizaje y Puntaje
        .row
          .col-sm-4
            input.form-control(type='text', name='', id='', value='' readonly)
          .col-sm-4
            input.form-control(type='text', name='', id='', value='' readonly)  
        .row
          .col-sm-4
            input.form-control(type='text', name='', id='', value='' readonly)
          .col-sm-4
            input.form-control(type='text', name='', id='', value='' readonly)     
      .form-group
        label.col-sm-3.control-label(for='website') Tipo de usuario
        .col-sm-7
          if user.type == 2
            input.form-control(type='text', name='type', id='', value='Alumno' readonly)
      .form-group
        label.col-sm-3.control-label Imagen de Perfil
        .col-sm-4
          img(src=user.gravatar(), class='profile', width='100', height='100')
      .form-group
        .col-sm-offset-3.col-sm-4
          button.btn.btn.btn-primary(type='submit')
            i.fa.fa-pencil
            | Guardar 

